# ==================================================
# API KEYS (REQUIRED)
# ==================================================

# Gemini API Key - Get from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# Scaledown API Key - Get from https://scaledown.xyz
SCALEDOWN_API_KEY=


# ==================================================
# FLASK CONFIGURATION
# ==================================================

# Flask environment (development or production)
FLASK_ENV=development

# Enable debug mode (True or False)
FLASK_DEBUG=True

# Flask server port
FLASK_PORT=5000

# Flask server host (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
FLASK_HOST=0.0.0.0

# CORS origins (comma-separated, or * for all)
CORS_ORIGINS=*


# ==================================================
# WEB SCRAPING (OPTIONAL)
# ==================================================

# Enable web scraping for live university data
SCRAPING_ENABLED=False

# University website URL to scrape
UNIVERSITY_WEBSITE_URL=https://university-website.edu

# Cache TTL (Time To Live) in seconds
CACHE_TTL=3600


# ==================================================
# DATA PATHS
# ==================================================

# Directory containing college data files (PDF/TXT)
COLLEGE_DATA_DIR=college_data

# Directory for cache files
CACHE_DIR=cache

# Directory for log files
LOG_DIR=logs


# ==================================================
# GEMINI MODEL CONFIGURATION
# ==================================================

# Gemini model name
GEMINI_MODEL=gemini-2.5-flash

# Temperature (0.0 to 1.0) - higher = more creative
GEMINI_TEMPERATURE=0.7

# Maximum output tokens
GEMINI_MAX_TOKENS=1024

# Top P (nucleus sampling)
GEMINI_TOP_P=0.95


# ==================================================
# SCALEDOWN CONFIGURATION
# ==================================================

# Compression rate (auto or specific value)
SCALEDOWN_RATE=auto

# Model for compression optimization
SCALEDOWN_MODEL=gemini-2.5-flash


# ==================================================
# LOGGING CONFIGURATION
# ==================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO


# ==================================================
# INSTRUCTIONS
# ==================================================

# 1. Copy this file to .env
#    cp .env.example .env
#
# 2. Fill in your API keys:
#    - GEMINI_API_KEY: Required for AI responses
#    - SCALEDOWN_API_KEY: Required for compression
#
# 3. Adjust other settings as needed
#
# 4. Never commit .env to version control!
#    (It's already in .gitignore)
